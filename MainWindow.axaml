<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="512"
        x:Class="Avalonia_Test.MainWindow"
        Title="Avalonia_Test"
        Width="1024" Height="512"
>

    <!-- Window may only have one top element! -->
    <!-- '<StackPanel>' stacks things horizontally or vertically -->
    <!-- First Column take as much width as it needs for components, second one proportional unit of the rest -->
    <Grid ColumnDefinitions="Auto, *" Background="{DynamicResource ResourceKey=PrimaryBackground}">
        <Border Grid.Column="0" Padding="20" Background="{DynamicResource ResourceKey=PrimaryBackgroundGradient}">
            <Grid RowDefinitions="*, Auto">
                <StackPanel Grid.Row="0" Spacing="12">
                    <!--<Image Source="avares://Avalonia_Test/assets/..."/>--> <!-- For things that are supported -->
                    <Svg Path="avares://Avalonia_Test/assets/images/logo.svg" Width="220" /> <!-- Had to 'dotnet add package Avalonia.Svg.Skia' -->

                    <Button HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <Label Classes="Icon">&#xe2c2;</Label> 
                            <Label>Home</Label>
                        </StackPanel>
                    </Button>

                    <Button HorizontalAlignment="Stretch">Process</Button>
                    <Button HorizontalAlignment="Stretch">Actions</Button>
                    <Button HorizontalAlignment="Stretch">Macros</Button>
                    <Button HorizontalAlignment="Stretch">Reporter</Button>
                    <Button HorizontalAlignment="Stretch">History</Button>
                </StackPanel>

                <Button Grid.Row="1">Settings</Button>
            </Grid>
        </Border>
    </Grid>
</Window>